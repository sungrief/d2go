root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[cmd/txttocode/txt/*.txt]
charset = unset
end_of_line = unset
indent_style = unset
indent_size = unset
trim_trailing_whitespace = unset
insert_final_newline = unset

[{*.go,go.{mod,work,work.sum,sum}}]
indent_style = tab
tab_width = 4

[*.md]
trim_trailing_whitespace = false
